  </div>
  </form>
  <div class="card-deck" style="margin-left: 5%;">
        <% @items.each do |i| %>
            <div class="card-deck col-sm-4 mb-3">
                <div class="card mb-4 shadow-sm">
                    <div class="card-header"><%= i.title %></div>
                    <div class="card-body text-info">
                        <h4 class="card-title">Price <%= i.price %> $</h4>
                        <p class="card-text"> About it : <%= i.description %></p>
                        <div style="text-align: center;">
                          <a href="<%= item_path(i.id) %>" class="btn btn-outline-warning" >Voir plus</a>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
    </div>

